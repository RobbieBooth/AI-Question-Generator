{
  "compilerOptions": {
    "target": "ES6",                          // Target latest JavaScript version
    "module": "ES6",                          // Use ES6 module system
    "outDir": "static/dist",
    "lib": [
      "decorators",
      "dom",
      "es5",
      "scripthost",
      "es2015.collection",
      "es2015.promise"
    ],
    "rootDir": "./scripts",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,    // Ensures compatibility with common JS modules
    "skipLibCheck": true,       // Skips type checking of all declaration files (.d.ts)
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./scripts/*.ts"],
  "exclude": ["node_modules", "dist"]
}